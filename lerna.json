{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "ignoreChanges": ["dist/**", "build/**", "node_modules/**"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]",
      "allowBranch": ["master", "alpha"]
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}
