{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "sourceMap": false,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
//    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]  // Explicitly exclude node_modules
}