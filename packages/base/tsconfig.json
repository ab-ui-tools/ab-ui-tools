{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false, // Changed from true to false
    "checkJs": false,
    "jsx": "react-jsx",
    "sourceMap": false,
    "composite": false, // Changed from true unless you need project references
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // More specific
  "exclude": ["node_modules", "**/*.js", "**/*.d.ts"] // Exclude JS and declaration files
}